license:            BSD-3-Clause
build-type:         Simple

library
    default-language:   Haskell2010
    hs-source-dirs:
        plugin
    build-depends:
        base >= 4.8 && < 5,
        ghc >=8.6 && <9.3
    exposed-modules:
        DoNothing 

executable segfault-repro 
    default-language:   Haskell2010
    hs-source-dirs:     app 
    main-is:            Demo.hs 
    build-depends:
        base >= 4.8 && < 5,
        segfault-repro

